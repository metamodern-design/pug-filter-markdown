{
  "name": "@metamodern/pug-filter-markdown",
  "version": "1.0.0",
  "description": "A custom Pug filter to render Markdown (with options)",
  "author": "Daniel C. Narey <os@metamodern.design>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/metamodern-design/pug-filter-markdown"
  },
  "type": "module",
  "module": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "eslint --fix lib/*.js",
    "release": "np",
    "sync": "git pull && git add . && git commit -m 'automated sync' && git push",
    "test": "ava test/*.js",
    "update": "updtr"
  },
  "dependencies": {
    "markdown-it": "^11.0.0"
  },
  "devDependencies": {
    "ava": "^3.8.2",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-ava": "^10.3.0",
    "eslint-plugin-import": "^2.20.2",
    "np": "^5.2.1",
    "pug": "^3.0.0",
    "updtr": "^3.1.0"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "pug",
    "filter",
    "filters",
    "render",
    "markdown",
    "markdown-it"
  ],
  "ava": {
    "nodeArguments": [
      "--experimental-modules"
    ]
  }
}
